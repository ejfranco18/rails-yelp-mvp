<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category.capitalize %></p>
<ul>
<% @reviews.each do |review| %>
  <li>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
  </li>
<% end %>
</ul>
<%= link_to new_restaurant_review_path(params[:id]) do %>
  <button>
    Add a review
  </button>
<% end %>
<%= link_to restaurants_path do %>
  <button>
    Back to Restaurants
  </button>
<% end %>
