<h1>Create a new restaurant</h1>
<% if @restaurant.errors.any? %>
  <div class="errors-container">
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.input :category, collection:['chinese', 'italian', 'japanese', 'french', 'belgian'] %>

  <%= f.submit "Create a restaurant", class: "btn btn-primary" %>
<% end %>
